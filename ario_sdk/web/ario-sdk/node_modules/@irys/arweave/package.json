{
  "name": "@irys/arweave",
  "version": "0.0.2",
  "repository": "https://github.com/Bundlr-Network/arweave",
  "author": "JesseTheRobot <jesse@bundlr.network>",
  "license": "MIT",
  "main": "./build/cjs/cjsIndex.js",
  "browser": "./build/esm/web/index.js",
  "module": "./build/esm/esmIndex.js",
  "exports": {
    "./node": {
      "require": {
        "default": "./build/cjs/node/index.js"
      },
      "import": {
        "default": "./build/esm/node/index.js"
      }
    },
    "./node/*": {
      "require": {
        "types": "./build/cjs/node/*.d.ts",
        "default": "./build/cjs/node/*.js"
      },
      "import": {
        "types": "./build/esm/node/*.d.ts",
        "default": "./build/esm/node/*.js"
      }
    },
    "./web": {
      "require": {
        "default": "./build/cjs/web/index.js"
      },
      "import": {
        "default": "./build/esm/web/index.js"
      }
    },
    "./web/*": {
      "require": {
        "types": "./build/cjs/web/*.d.ts",
        "default": "./build/cjs/web/*.js"
      },
      "import": {
        "types": "./build/esm/web/*.d.ts",
        "default": "./build/esm/web/*.js"
      }
    },
    "./common/*": {
      "require": {
        "types": "./build/cjs/common/*.d.ts",
        "default": "./build/cjs/common/*.js"
      },
      "import": {
        "types": "./build/esm/common/*.d.ts",
        "default": "./build/esm/common/*.js"
      }
    },
    "./bundle": {
      "types": "./build/esm/esmIndex.d.ts",
      "default": "./build/bundle.js"
    },
    ".": {
      "browser": "./build/esm/web/index.js",
      "require": {
        "node": "./build/cjs/node/index.js",
        "default": "./build/cjs/cjsIndex.js"
      },
      "import": {
        "node": "./build/esm/node/index.js",
        "default": "./build/esm/esmIndex.js"
      }
    },
    "./*": {
      "types": "./*.d.ts",
      "default": "./*.js"
    }
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "lint": "eslint ./src -c ./.eslintrc.json --ext .ts,.tsx",
    "lint:fix": "eslint ./src -c ./.eslintrc.json --ext .ts,.tsx --fix",
    "watch": "tsc --watch -p tsconfig.json",
    "test": "jest",
    "clean": "rm -rf ./build",
    "dev:build": "npm run clean && concurrently \" yarn tsc -p cjs.tsconfig.json && sh ./scripts/fix-pkg.sh cjs commonjs \"  \" yarn tsc -p esm.tsconfig.json && sh ./scripts/fix-pkg.sh esm module && yarn tsc-esm-fix --tsconfig esm.tsconfig.json  \" ",
    "bundle:web": "npx webpack --config-name web",
    "bundle:web:test": "npx webpack --config-name web-tests",
    "bundle:web:prod": "npx webpack --config-name web-prod",
    "web:test": "concurrently \"npm run bundle:web\" \"npm run bundle:web:test\" && opener ./tests/web/web.html",
    "prod:build": "npm run dev:build && npm run bundle:web:prod && ts-node scripts/embedVersion.ts"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.5",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "arconnect": "^0.4.2",
    "buffer": "^6.0.3",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "inspectpack": "^4.7.1",
    "jest": "^29.5.0",
    "opener": "^1.5.2",
    "prettier": "^2.8.8",
    "readable-stream": "^4.4.2",
    "resolve-tspaths": "^0.8.13",
    "resolve.exports": "^2.0.2",
    "stream-browserify": "^3.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsc-esm-fix": "^2.20.14",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "asn1.js": "^5.4.1",
    "async-retry": "^1.3.3",
    "axios": "^1.4.0",
    "base64-js": "^1.5.1",
    "bignumber.js": "^9.1.1"
  }
}
